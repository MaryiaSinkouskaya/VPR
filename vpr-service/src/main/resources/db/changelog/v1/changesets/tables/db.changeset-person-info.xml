<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-person-info-table" author="maryia">
        <comment>Create person_info table with sequence</comment>
        
        <!-- Create sequence for person_info id -->
        <createSequence 
            sequenceName="person_info_id_seq" 
            startValue="10" 
            incrementBy="1"/>
        
        <!-- Create person_info table -->
        <createTable tableName="person_info">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(16)">
                <constraints nullable="false"/>
            </column>
            <column name="surname" type="VARCHAR(16)">
                <constraints nullable="false"/>
            </column>
            <column name="patronymic" type="VARCHAR(16)">
                <constraints nullable="false"/>
            </column>
            <column name="birth_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="address_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="work_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="VARCHAR(16)"/>
        </createTable>
        
        <!-- Set the sequence to be owned by the person_info.id column -->
        <sql>ALTER SEQUENCE person_info_id_seq OWNED BY person_info.id;</sql>
    </changeSet>

</databaseChangeLog>
