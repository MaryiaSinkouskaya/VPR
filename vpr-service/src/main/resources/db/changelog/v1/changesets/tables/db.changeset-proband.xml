<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-proband-table" author="maryia">
        <comment>Create proband table with sequence</comment>
        
        <!-- Create sequence for proband id -->
        <createSequence 
            sequenceName="proband_id_seq" 
            startValue="10" 
            incrementBy="1"/>
        
        <!-- Create proband table -->
        <createTable tableName="proband">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="karyotype" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="pregnancy_duration_in_weeks" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="weight" type="DOUBLE PRECISION">
                <constraints nullable="false"/>
            </column>
            <column name="head" type="DOUBLE PRECISION">
                <constraints nullable="false"/>
            </column>
            <column name="pregnancy_number" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="is_aborted" type="BOOLEAN"/>
            <column name="organization_id" type="INTEGER"/>
            <column name="abnormality_id" type="INTEGER"/>
            <column name="mother_id" type="INTEGER"/>
            <column name="father_id" type="INTEGER"/>
            <column name="doctor_id" type="INTEGER"/>
            <column name="note_id" type="INTEGER"/>
            <column name="birth_date" type="DATE"/>
            <column name="gender" type="VARCHAR(16)"/>
            <column name="ploidity" type="VARCHAR(16)"/>
            <column name="labor_outcome" type="VARCHAR(16)"/>
        </createTable>
        
        <!-- Set the sequence to be owned by the proband.id column -->
        <sql>ALTER SEQUENCE proband_id_seq OWNED BY proband.id;</sql>
    </changeSet>

</databaseChangeLog>
