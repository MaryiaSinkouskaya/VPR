<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-address-table" author="maryia">
        <comment>Create address table with sequence</comment>
        
        <!-- Create sequence for address id -->
        <createSequence 
            sequenceName="address_id_seq" 
            startValue="20"
            incrementBy="1"/>
        
        <!-- Create address table -->
        <createTable tableName="address">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="street" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="building" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="apartment" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="town" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <!-- Set the sequence to be owned by the address.id column -->
        <sql>ALTER SEQUENCE address_id_seq OWNED BY address.id;</sql>
    </changeSet>

</databaseChangeLog>
