<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-abnormality-table" author="maryia">
        <comment>Create abnormality table with sequence</comment>
        
        <!-- Create sequence for abnormality id -->
        <createSequence 
            sequenceName="abnormality_id_seq" 
            startValue="50" 
            incrementBy="1"/>
        
        <!-- Create abnormality table -->
        <createTable tableName="abnormality">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <!-- Set the sequence to be owned by the abnormality.id column -->
        <sql>ALTER SEQUENCE abnormality_id_seq OWNED BY abnormality.id;</sql>
    </changeSet>

</databaseChangeLog>
