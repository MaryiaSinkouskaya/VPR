<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-organization-table" author="maryia">
        <comment>Create organization table with sequence</comment>
        
        <!-- Create sequence for organization id -->
        <createSequence 
            sequenceName="org_id_seq" 
            startValue="20"
            incrementBy="1"/>
        
        <!-- Create organization table -->
        <createTable tableName="organization">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="number" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(512)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <!-- Set the sequence to be owned by the organization.id column -->
        <sql>ALTER SEQUENCE org_id_seq OWNED BY organization.id;</sql>
    </changeSet>

</databaseChangeLog>
