<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-mother-table" author="maryia">
        <comment>Create mother table with sequence</comment>
        
        <!-- Create sequence for mother id -->
        <createSequence 
            sequenceName="mother_id_seq" 
            startValue="20"
            incrementBy="1"/>
        
        <!-- Create mother table -->
        <createTable tableName="mother">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="last_menstruation_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="diagnose_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="girl_surname" type="VARCHAR(16)">
                <constraints nullable="false"/>
            </column>
            <column name="person_info_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <!-- Set the sequence to be owned by the mother.id column -->
        <sql>ALTER SEQUENCE mother_id_seq OWNED BY mother.id;</sql>
    </changeSet>

</databaseChangeLog>
