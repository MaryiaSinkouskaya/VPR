<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-token-table" author="maryia">
        <comment>Create token table with sequence</comment>
        
        <!-- Create sequence for token id -->
        <createSequence 
            sequenceName="token_id_seq" 
            startValue="20"
            incrementBy="1"/>
        
        <!-- Create token table -->
        <createTable tableName="token">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="token" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="revoked" type="BOOLEAN"/>
            <column name="expired" type="BOOLEAN"/>
            <column name="user_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <!-- Set the sequence to be owned by the token.id column -->
        <sql>ALTER SEQUENCE token_id_seq OWNED BY token.id;</sql>
    </changeSet>

</databaseChangeLog>
