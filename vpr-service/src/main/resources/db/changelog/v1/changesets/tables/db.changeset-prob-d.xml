<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-prob-d-table" author="maryia">
        <comment>Create prob_d table with sequence</comment>
        
        <!-- Create sequence for prob_d id -->
        <createSequence 
            sequenceName="prob_d_id_seq" 
            startValue="10" 
            incrementBy="1"/>
        
        <!-- Create prob_d table -->
        <createTable tableName="prob_d">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="death_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="proband_id" type="INTEGER"/>
        </createTable>
        
        <!-- Set the sequence to be owned by the prob_d.id column -->
        <sql>ALTER SEQUENCE prob_d_id_seq OWNED BY prob_d.id;</sql>
    </changeSet>

</databaseChangeLog>
